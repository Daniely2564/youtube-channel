<main class="ui container">
    <div class="ui grid">
        <div class="four wide column">
            <div class="ui pointing vertical menu">
                <a class="item">
                    {{language}}
                </a>
                <div class="item">
                    <b>{{section.title}}</b>
                    <div class="menu" style="text-indent:5px">
                        {{#each section.items}}
                            <a class="item" href="/channel/play/{{../type}}/{{this.snippet.position}}/{{this.contentDetails.videoId}}">{{this.snippet.title}}</a>  
                        {{/each}}
                    </div>
                </div>
                <div class="ui dropdown item">
                    Dropdown <i class="dropdown icon"></i>
                    <div class="menu">
                    <div class="item"></div>
                    <div class="item">Choice 2</div>
                    <div class="item">Choice 3</div>
                </div>
            </div>
        </div>
        
    </div>
</main>